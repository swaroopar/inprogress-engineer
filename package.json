{
    "name": "inprogress-engineer",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "docusaurus": "docusaurus",
        "start": "docusaurus start",
        "build": "docusaurus build",
        "swizzle": "docusaurus swizzle",
        "deploy": "docusaurus deploy",
        "clear": "docusaurus clear",
        "serve": "docusaurus serve",
        "write-translations": "docusaurus write-translations",
        "write-heading-ids": "docusaurus write-heading-ids",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@docusaurus/core": "3.4.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@docusaurus/plugin-ideal-image": "^3.3.2",
        "@docusaurus/plugin-content-docs": "^3.3.2",
        "@docusaurus/preset-classic": "^3.3.2",
        "@docusaurus/theme-mermaid": "^3.3.2",
        "@docusaurus/tsconfig": "3.3.2",
        "@docusaurus/types": "3.3.2",
        "@types/react": "^18.3.3",
        "@typescript-eslint/eslint-plugin": "^7.11.0",
        "@typescript-eslint/parser": "^7.11.0",
        "autoprefixer": "^10.4.19",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.2",
        "knip": "^5.17.3",
        "lucide-react": "^0.379.0",
        "postcss": "^8.4.38",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "prism-react-renderer": "^2.3.1",
        "tailwindcss": "^3.4.3",
        "typescript": "^5.4.5"
    },
    "browserslist": {
        "production": [
            ">0.5%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 3 chrome version",
            "last 3 firefox version",
            "last 5 safari version"
        ]
    },
    "engines": {
        "node": ">=18.0"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "plugin:@typescript-eslint/strict"
        ],
        "plugins": [
            "react",
            "@typescript-eslint"
        ],
        "rules": {
            "react/jsx-uses-react": "error",
            "react/jsx-uses-vars": "error",
            "no-undef": "off",
            "@typescript-eslint/no-inferrable-types": "off"
        },
        "ignorePatterns": [
            "build/**",
            "plugins/tailwind-config.ts"
        ],
        "root": true,
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": "tsconfig.json"
        }
    },
    "knip": {
        "entry": [
            "{index,main,cli}.{js,cjs,mjs,jsx,ts,cts,mts,tsx}",
            "src/{index,main,cli}.{js,cjs,mjs,jsx,ts,cts,mts,tsx}",
            "docusaurus.config.ts",
            "src/pages/index.tsx",
            "src/pages/talks.tsx",
            "src/pages/why.tsx"
        ],
        "project": [
            "**/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}",
            "*.ts",
            "*.js"
        ],
        "ignore": [
            "babel.config.js"
        ],
        "ignoreDependencies": [
            "@docusaurus/useDocusaurusContext",
            "@theme/Layout",
            "@theme/IdealImage",
            "postcss-import",
            "@docusaurus/theme-mermaid"
        ]
    }
}
